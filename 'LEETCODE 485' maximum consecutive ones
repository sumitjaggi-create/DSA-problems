class Solution {
public:
    int findMaxConsecutiveOnes(vector<int>& nums) {

        int maxCount = 0;
        int curCount = 0;

        for (int i = 0; i < nums.size(); i++) {
            if (nums[i] == 1) {
                curCount++;
            } else {
                if (curCount > maxCount) {
                    maxCount = curCount;
                }

                curCount = 0;
            }
        }
        if (curCount>maxCount) {
            maxCount = curCount;
        } 
        return maxCount;
    }
};
