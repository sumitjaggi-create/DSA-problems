class Solution {
public:
    int numWaterBottles(int numBottles, int numExchange) {

        int n = numBottles, x = numExchange;
        int ans = n;
        while (n >= x) {

            int rem = n % x;
            int div = n / x;

            n = rem + div;

            ans = ans + div;
        }
        return ans;
    }
};
